.navbar.navbar-default.navbar-fixed-top{:role => "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => root_path} ReadYourScriptures
    .navbar-collapse.collapse.navbar-left
      %ul.nav.navbar-nav
        %li= link_to 'New reading plan', new_schedule_path
    .navbar-collapse.collapse.navbar-right
      %ul.nav.navbar-nav
        - if current_user
          %li= link_to 'Account', account_path
          %li= link_to 'Logout', user_session_path(current_user_session), method: 'DELETE'
        - else
          %li= link_to 'Sign in', login_path
          %li= link_to 'Sign up', signup_path, class: 'btn btn-primary btn-xs'
