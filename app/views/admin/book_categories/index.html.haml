= content_for :title, "Book categories"
%section.content-header
  %h1= yield(:title)

  - navigation_add 'Book categories', admin_book_categories_path
  = render_navigation

%section.content
  .box.box-solid
    .box-header= link_to 'add new category', new_admin_book_category_path, class: 'btn btn-primary btn-flat btn-block btn-sm'
    .box-body
      %table.table.table-striped
        %thead
          %tr
            %th name
            %th
        %tbody
        - @book_categories.each do |category|
          %tr
            %th= category.name
            %td
              = link_to 'edit', edit_admin_book_category_path(category), class: 'btn btn-warning'
              = link_to 'destroy', admin_book_category_path(category), class: 'btn btn-danger', method: 'DELETE'

  = paginate @book_categories
